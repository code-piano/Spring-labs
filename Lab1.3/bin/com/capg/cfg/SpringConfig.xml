<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.capg.bean.SBU" id="sbu">
	<property name="sbuId" value="1234"></property>
	<property name="sbuName" value="Mr. Amandep Singh"></property>
	<property name="sbuHead" value="Product Engineering Services"></property>
	<property name="empList">
	<list>
	<ref bean="emp1"/>
	<ref bean="emp2"/>
	</list></property>
	</bean>
	<bean class="com.capg.bean.Employee" id="emp1">
	<property name="empId" value="0011"/>
	<property name="empName" value="Sandeep"/>
	<property name="salary" value="650000"/>
	<property name="businUnit" value="B-SE"/>
	<property name="age" value="40"/>
	</bean>
	<bean class="com.capg.bean.Employee" id="emp2">
	<property name="empId" value="0012"/>
	<property name="empName" value="Asutosh"/>
	<property name="salary" value="560000"/>
	<property name="businUnit" value="B-SE"/>
	<property name="age" value="34"/>
	</bean>
	
</beans>
